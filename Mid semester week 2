#include <iostream>
#include <vector>
using namespace std;

class AttendanceSession {
private:
    string courseCode;
    string date;
    string startTime;
    int duration;

public:
    // Constructor
    AttendanceSession(string code, string d, string time, int dur) {
        courseCode = code;
        date = d;
        startTime = time;
        duration = dur;
    }

    // Display session details
    void displaySession() {
        cout << "\nCourse Code: " << courseCode;
        cout << "\nDate: " << date;
        cout << "\nStart Time: " << startTime;
        cout << "\nDuration: " << duration << " minutes\n";
    }
};

LECTURE SECTION
vector<AttendanceSession> sessions;

void createSession() {
    string code, date, time;
    int duration;

    cout << "\nEnter Course Code: ";
    cin >> code;

    cout << "Enter Date (YYYY-MM-DD): ";
    cin >> date;

    cout << "Enter Start Time (HH:MM): ";
    cin >> time;

    cout << "Enter Duration (minutes): ";
    cin >> duration;

    AttendanceSession newSession(code, date, time, duration);
    sessions.push_back(newSession);

    cout << "\nLecture Session Created Successfully!\n";
}

MIAN MENU STRUCTURE
int main() {
    int choice;

    do {
        cout << "\n===== DIGITAL ATTENDANCE SYSTEM =====\n";
        cout << "1. Create Lecture Session\n";
        cout << "2. View All Sessions\n";
        cout << "3. Exit\n";
        cout << "Enter choice: ";
        cin >> choice;

        switch(choice) {
            case 1:
                createSession();
                break;

            case 2:
                for (int i = 0; i < sessions.size(); i++) {
                    sessions[i].displaySession();
                }
                break;

            case 3:
                cout << "Exiting program...\n";
                break;

            default:
                cout << "Invalid choice!\n";
        }

    } while(choice != 3);

    return 0;
}
